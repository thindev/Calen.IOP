<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:Calen.IOP.Client.Desktop.ViewModel"
      xmlns:local="clr-namespace:Calen.IOP.Client.Desktop.Pages"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" x:Class="Calen.IOP.Client.Desktop.Pages.DepartmentManage"
      mc:Ignorable="d" 
      d:DesignHeight="337.021" d:DesignWidth="612.766"
      Title="DepartmentManage">
    <Page.Resources>
        <vm:DepartmentManager x:Key="DepartmentManager"/>
    </Page.Resources>

    <Grid DataContext="{StaticResource DepartmentManager}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="436*"/>
        </Grid.ColumnDefinitions>

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding RefreshDepartmentsCommand}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>

    </Grid>
</Page>
